{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .auth-container {
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            position: relative;
            overflow: hidden;
        }
        .auth-card {
            background: #ffffff;
            border-radius: 15px;
            padding: 1.5rem; /* Уменьшаем внутренние отступы */
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 350px; /* Уменьшаем максимальную ширину */
            position: relative;
            z-index: 1;
        }
        .auth-card h1 {
            color: #2c3e50;
            font-size: 1.5rem; /* Уменьшаем заголовок */
            margin-bottom: 1.5rem;
        }
        .auth-card .form-label {
            color: #34495e;
            font-weight: 500;
            font-size: 0.9rem; /* Уменьшаем размер текста меток */
        }
        .auth-card .form-control {
            border: 1px solid #dfe6e9;
            border-radius: 5px;
            padding: 0.5rem 0.75rem; /* Уменьшаем внутренние отступы поля */
            font-size: 0.9rem; /* Уменьшаем размер текста */
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        .auth-card .form-control:focus {
            border-color: #1abc9c;
            box-shadow: 0 0 5px rgba(26, 188, 156, 0.3);
            outline: none;
        }
        .auth-card .input-group-text {
            background: #f5f7fa;
            border: 1px solid #dfe6e9;
            border-right: none;
            color: #1abc9c;
            border-radius: 5px 0 0 5px;
            padding: 0.5rem 0.75rem; /* Уменьшаем отступы */
            font-size: 0.9rem;
        }
        .auth-card .btn-primary {
            background: #1abc9c;
            border: none;
            padding: 0.5rem; /* Уменьшаем размер кнопки */
            border-radius: 5px;
            font-size: 0.9rem;
            transition: background 0.3s ease;
        }
        .auth-card .btn-primary:hover {
            background: #16a085;
        }
        .auth-card .link-primary {
            color: #1abc9c;
            text-decoration: none;
            font-size: 0.9rem;
        }
        .auth-card .link-primary:hover {
            text-decoration: underline;
        }
        .bg-shape {
            position: absolute;
            width: 300px;
            height: 300px;
            background: rgba(26, 188, 156, 0.1);
            border-radius: 50%;
            filter: blur(50px);
        }
        .bg-shape-1 { top: -100px; left: -100px; }
        .bg-shape-2 { bottom: -100px; right: -100px; }
    </style>
{% endblock %}

{% block body %}
    <div class="auth-container">
        <div class="bg-shape bg-shape-1"></div>
        <div class="bg-shape bg-shape-2"></div>
        <div class="auth-card">
            <h1 class="text-center">Регистрация</h1>

            {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
            <div class="mb-3">
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'example@domain.com'}}) }}
                </div>
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword.first, 'Пароль', {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Введите пароль'}}) }}
                </div>
                {{ form_errors(registrationForm.plainPassword.first) }}
            </div>
            <div class="mb-3">
                {{ form_label(registrationForm.plainPassword.second, 'Повторите пароль', {'label_attr': {'class': 'form-label'}}) }}
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Повторите пароль'}}) }}
                </div>
                {{ form_errors(registrationForm.plainPassword.second) }}
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-primary"><i class="bi bi-person-plus"></i> Зарегистрироваться</button>
            </div>
            {{ form_end(registrationForm) }}

            <p class="mt-3 text-center">Уже есть аккаунт? <a href="{{ path('app_login') }}" class="link-primary">Войти</a></p>
        </div>
    </div>
{% endblock %}