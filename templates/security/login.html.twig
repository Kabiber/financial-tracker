{% extends 'base.html.twig' %}

{% block title %}Вход{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <h1 class="mb-4 text-center">Вход</h1>

            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}

            <form method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                        <input type="email" name="email" id="inputEmail" class="form-control" value="{{ last_username }}" placeholder="example@domain.com" required>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Пароль</label>
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-lock"></i></span>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Введите пароль" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-box-arrow-in-right"></i> Войти</button>
                </div>
            </form>

            <p class="mt-3 text-center">Нет аккаунта? <a href="{{ path('app_register') }}" class="link-primary">Зарегистрироваться</a></p>
        </div>
    </div>
{% endblock %}